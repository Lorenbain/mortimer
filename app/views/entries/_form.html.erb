<fieldset class="common">
	<legend class="hidden"><span class="hidden">Create Entry Form</span></legend>
	
	<div class="field text">
		<label for="entry_title">Title:</label>
		<input id="entry_title" name="entry[title]" value="<%= @entry.title %>" maxlength='100' tabindex="1"  size="20"/>
	</div>
	
	<div class="field text">
		<label for="username">Username:</label>
		<input id="username" name="entry[username]" value="<%= @entry.username %>" maxlength='110' tabindex="2" autocomplete="off"  size="20"/>
	</div>
	
	<div class="field text">
    <label for="password">Password:</label>  
		<input id="password" type="text" name="entry[password]" value="<%= @entry.password %>" maxlength='40' tabindex="3" autocomplete="off"  size="20"/><br/>
	</div>
	
	<div class="field text">
		<label for="url">Url:</label>
		<input id="url" name="entry[url]" value="<%= @entry.url %>" maxlength='110' tabindex="5"  size="20"/>
	</div>
	
	<div class="field text">
		<label for="notes">Notes:</label>
		<textarea id="notes" name="entry[description]" cols="20" rows="30" tabindex="6"><%= @entry.description %></textarea>
	</div>
	<div class="field">
	<% if current_user.is_admin == false  %>
		<input type="hidden" name="entry[group_id]" value="<%= @entry.group_id %>" />
		<label for="entry">Group:<span class="fakeLabel"><%= @entry.group.title %></span></label>
	<% else %>	
		<label for="entry">Group:</label>
		<select id="entry" name="entry[group_id]"  tabindex="7" >
		  <%= options_for_select(@groups, @entry.group_id) %>
		</select>
	<%end%>
	</div>
</fieldset>
